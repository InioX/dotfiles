#custom-search, #custom-power {
  background: @primary;
  padding: 0px 10px;
  margin: 7px 0px;
  border-radius: 10px;
  font-size: 18px;
}

#custom-search {
  margin-left: 5px;
  font-weight: normal;
  font-size: 15px;
  padding: 0px 10px;
  margin: 7px 5px;
}

#custom-power {
  font-weight: normal;
}

#tray {
	margin-left: 5px;
	padding-left: 10px;
	padding-right: 10px;
	transition: none;
}

#clock {
  border-radius: 5px;
  margin-left: 5px;
}

#network, #pulseaudio, #battery, #custom-wl-gammarelay-brightness, #custom-wl-gammarelay-temperature {
  margin-right: 5px;
}

#custom-wl-gammarelay-temperature {
  margin-left: 0px;
  padding-left: 4px;
  border-radius: 0px 7px 7px 0px;
  border-width: 2px 2px 2px 0px;
}

#custom-wl-gammarelay-brightness {
  margin-right: 0px;
  padding-right: 4px;
  border-radius: 7px 0px 0px 7px;
  border-width: 2px 0px 2px 2px;
}
