@import "colors.css";

* {
  all: initial;
  border: none;
  border-radius: 0;
  font-family: monospace;
  font-weight: bold;
  font-size: 14px;
  min-height: 0px;
}

window#waybar {
  background: @surface;
}

#workspaces {
  background: @surfaceVariant;
  color: @onSurface;
  border: 2px solid @outline;
  padding: 0px 5px;
  margin: 5px;
  border-radius: 10px;
}

#workspaces button {
  color: @onSurface;
  padding: 4px;
  margin: 4px;
  border-radius: 30px;
  transition: all 0.2s ease-out;
}

#workspaces button.active {
  background: @primary;
  color: @onSurface;
  padding: 0px 20px;
  transition: all 0.2s ease-out;
}

#workspaces button:hover {
  background: @surface;
}

tooltip {
  background: @surfaceVariant;
  border-radius: 10px;
  border: 3px solid @outline;
  color: @onSurfaceVariant;
}

#custom-mic, #custom-language, #custom-updates, #custom-caffeine, #clock, #battery, #pulseaudio, #network, #tray, #backlight, #custom-wl-gammarelay-brightness, #custom-wl-gammarelay-temperature {
  background: @surfaceVariant;
  color: @onSurface;
  border: 2px solid @outline;
  padding: 0px 10px;
  margin: 7px 0px;
  border-radius: 8px;
}

#custom-mic {
  margin-right: 5px;
}

