@import                          "colors.rasi"

* {
    background-color:  		        transparent;
    text-color:        		        @on-surface;
    font:			                "Noto Sans 12";
	
    width:      		            20%;
    margin:     		            0px;
    padding:   			            0px;
    spacing:    		            0px;
}

inputbar {
   background-color:	        	@surface-variant;
   padding:			                10px;
   border-radius:		            10px;
}

listview {
   lines:		                	5;
}

mainbox {
    background-color:               @surface;
    children:                       [ inputbar, listview ];
    spacing:                        15px;
    padding:                        20px;
}

window {
    border: 			            4px;
    border-color:		            @surface-variant;
    border-radius:      	        10px;
    background-color:		        @surface-variant;
}

element {
    padding: 			            5px;
    background-color:		        @surface;
}

element selected {
    text-color:        		        @on-primary;
    background-color: 		        @primary;
    border-radius:		            10px;
}

element-icon {
    margin:		            	    0px 5px 0px 0px;
    size:			                30px;
}
